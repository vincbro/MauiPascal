<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiPascal.ViewModels"
             xmlns:converters="clr-namespace:MauiPascal.Converters"
             xmlns:models="clr-namespace:MauiPascal.Models"
             x:Class="MauiPascal.RoutePage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Black}}"
             Title="Route Details">

    <ContentPage.Resources>
        <converters:IntToTimeConverter x:Key="IntToTimeConverter" />
        <converters:DurationConverter x:Key="DurationConverter" />
        <converters:BoolToRotationConverter x:Key="BoolToRotationConverter" />
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Spacing="12" Padding="12">

                <Border Padding="12"
                        Margin="0,0,0,8"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                        IsVisible="{Binding RouteFound}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="4">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Your Journey" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" 
                                    Padding="8,4"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="4" />
                                </Border.StrokeShape>
                                <Label Text="{Binding Itinerary.TotalDurationMinutes, Converter={StaticResource DurationConverter}}" 
                                       TextColor="White" 
                                       FontSize="11" 
                                       FontAttributes="Bold" />
                            </Border>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="{Binding Itinerary.From.Name}" 
                                   FontSize="14"
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />
                            <Label Text="→" 
                                   FontSize="14"
                                   TextColor="{StaticResource Primary}" />
                            <Label Text="{Binding Itinerary.To.Name}" 
                                   FontSize="14"
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <CollectionView ItemsSource="{Binding Itinerary.Legs}" 
                                IsVisible="{Binding RouteFound}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Leg">
                            <Border Margin="0,0,0,8" 
                                    Padding="12"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    StrokeThickness="1"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>

                                <Border.Shadow>
                                    <Shadow Brush="Black" Offset="0,1" Radius="3" 
                                            Opacity="{AppThemeBinding Light=0.06, Dark=0}" />
                                </Border.Shadow>

                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:RoutePageViewModel}}, Path=ToggleLegCommand}"
                                        CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>

                                <VerticalStackLayout Spacing="10">
                                    <!-- Time and Route -->
                                    <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center" ColumnSpacing="6">
                                        <Label Text="{Binding DepartureTime, Converter={StaticResource IntToTimeConverter}}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold" 
                                                   VerticalOptions="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                                        <HorizontalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                            <Label Text="{Binding From.Name}" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                            <Label Text="→" 
                                                   FontSize="13" 
                                                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                            <Label Text="{Binding To.Name}" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                                            <Label Text="{Binding DurationMinutes, Converter={StaticResource DurationConverter}}" 
        TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" 
        FontSize="13" 
                                                   VerticalOptions="Center"
        FontAttributes="Bold" />


                                        </HorizontalStackLayout>

                                        <Label Grid.Column="2" 
                                               Text="⌄"
                                               FontSize="16" 
                                               HorizontalOptions="End"
                                               VerticalOptions="Center"
                                               IsVisible="{Binding Stops.Count}"
                                               Rotation="{Binding IsExpanded, Converter={StaticResource BoolToRotationConverter}}"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />

                                    </Grid>

                                    <!-- Transit Line Info -->
                                    <Grid ColumnDefinitions="Auto, Auto, *, Auto" ColumnSpacing="8">
                                        <!-- Mode Badge -->
                                        <Border Grid.Column="0"
                                                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" 
                                                Padding="6,3"
                                                StrokeThickness="0"
                                                VerticalOptions="Center">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="4" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Mode}" 
                                                   TextColor="White" 
                                                   FontSize="10" 
                                                   FontAttributes="Bold" />
                                        </Border>

                                        <!-- Line Number/Name -->
                                        <Border Grid.Column="1"
                                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" 
                                                Padding="8,3"
                                                StrokeThickness="0"
                                                VerticalOptions="Center"
                                                IsVisible="{Binding ShortName}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="4" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding ShortName}" 
                                                   TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold" />
                                        </Border>

                                        <!-- Direction/Headsign or Long Name -->
                                        <VerticalStackLayout Grid.Column="2" VerticalOptions="Center" Spacing="1">
                                            <Label Text="{Binding HeadSign}" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation"
                                                   IsVisible="{Binding HeadSign}"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                            <Label Text="{Binding LongName}" 
                                                   FontSize="10" 
                                                   LineBreakMode="TailTruncation"
                                                   IsVisible="{Binding LongName}"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                                        </VerticalStackLayout>

                                        <!-- Stop count badge -->
                                        <Border Grid.Column="3"
                                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" 
                                                Padding="6,3"
                                                StrokeThickness="0"
                                                VerticalOptions="Center"
                                                IsVisible="{Binding Stops.Count}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="4" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Stops.Count, StringFormat='{0} stops'}" 
                                                   FontSize="9" 
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
                                        </Border>
                                    </Grid>

                                    <VerticalStackLayout IsVisible="{Binding IsExpanded}" Margin="0,8,0,0" Spacing="0">
                                        <Border HeightRequest="1" 
                                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" 
                                                Margin="0,0,0,12" />

                                        <!-- Departure Stop -->
                                        <Grid ColumnDefinitions="55, 24, *" 
                                              Margin="0,0,0,2">
                                            <Label Grid.Column="0" 
                                                   Text="{Binding DepartureTime, Converter={StaticResource IntToTimeConverter}}" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Start"
                                                   Margin="0,2,0,0"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                                            <Grid Grid.Column="1" WidthRequest="24" Margin="0,0,4,0">
                                                <BoxView WidthRequest="3" 
                                                         HorizontalOptions="Center"
                                                         BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                <Border WidthRequest="12" 
                                                        HeightRequest="12" 
                                                        VerticalOptions="Start"
                                                        Margin="0,4,0,0"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                                        Stroke="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                                                        StrokeThickness="3">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="6" />
                                                    </Border.StrokeShape>
                                                </Border>
                                            </Grid>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2" Margin="0,0,0,8">
                                                <Label Text="{Binding From.Name}" 
                                                       FontSize="13" 
                                                       FontAttributes="Bold"
                                                       LineBreakMode="WordWrap"
                                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                                <Label Text="Departure" 
                                                       FontSize="10" 
                                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Intermediate Stops -->
                                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Stops}">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate x:DataType="models:Stop">
                                                    <Grid ColumnDefinitions="55, 24, *" 
                                                          Margin="0,0,0,2">
                                                        <Label Grid.Column="0" 
                                                               Text="{Binding ArrivalTime, Converter={StaticResource IntToTimeConverter}}" 
                                                               FontSize="11" 
                                                               VerticalOptions="Start"
                                                               Margin="0,2,0,0"
                                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />

                                                        <Grid Grid.Column="1" WidthRequest="24" Margin="0,0,4,0">
                                                            <BoxView WidthRequest="3" 
                                                                     HorizontalOptions="Center"
                                                                     BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                                            <Ellipse WidthRequest="8" 
                                                                     HeightRequest="8" 
                                                                     VerticalOptions="Start"
                                                                     Margin="0,4,0,0"
                                                                     Fill="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}" 
                                                                     Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                                                     StrokeThickness="3" />
                                                        </Grid>

                                                        <Label Grid.Column="2" 
                                                               Text="{Binding Location.Name}" 
                                                               FontSize="12" 
                                                               VerticalOptions="Start"
                                                               Margin="0,2,0,8"
                                                               LineBreakMode="WordWrap"
                                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </VerticalStackLayout>

                                        <!-- Arrival Stop -->
                                        <Grid ColumnDefinitions="55, 24, *" 
                                              Margin="0,0,0,0">
                                            <Label Grid.Column="0" 
                                                   Text="{Binding ArrivalTime, Converter={StaticResource IntToTimeConverter}}" 
                                                   FontSize="13" 
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Start"
                                                   Margin="0,2,0,0"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                                            <Grid Grid.Column="1" WidthRequest="24" Margin="0,0,4,0">
                                                <Border WidthRequest="12" 
                                                        HeightRequest="12" 
                                                        VerticalOptions="Start"
                                                        Margin="0,4,0,0"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                                        Stroke="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                                                        StrokeThickness="3">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="6" />
                                                    </Border.StrokeShape>
                                                </Border>
                                            </Grid>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="{Binding To.Name}" 
                                                       FontSize="13" 
                                                       FontAttributes="Bold"
                                                       LineBreakMode="WordWrap"
                                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                                <Label Text="Arrival" 
                                                       FontSize="10" 
                                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- No Route Found Message -->
        <Border Padding="20,16"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                StrokeThickness="1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                IsVisible="{Binding ShowNoRouteMessage}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,2" Radius="8" Opacity="0.08" />
            </Border.Shadow>
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center" MaximumWidthRequest="300">
                <Label Text="⚠️" 
                       FontSize="32"
                       HorizontalOptions="Center" />
                <Label Text="No Route Found" 
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                <Label Text="We couldn't find a route for this journey. Please try different stations or times." 
                       FontSize="13"
                       HorizontalTextAlignment="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
            </VerticalStackLayout>
        </Border>

        <!-- Loading State -->
        <Grid BackgroundColor="{AppThemeBinding Light=#E6FFFFFF, Dark=#E6000000}" 
              IsVisible="{Binding IsBusy}">
            <Border Padding="20,16"
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                    StrokeThickness="1"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="8" Opacity="0.12" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                       Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                                       WidthRequest="24"
                                       HeightRequest="24" />
                    <Label Text="Searching..." 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>