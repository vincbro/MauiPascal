<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPascal.MainPage">

    <VerticalStackLayout
            Padding="25,50"
            Spacing="25">
        <Entry x:Name="From"
                        Placeholder="From"
                        TextChanged="From_TextChanged"
                        Focused="From_Focused" 
                        />
        <Grid ColumnDefinitions="*, Auto" 
                    VerticalOptions="Center" 
                  IsVisible="False"
                    HorizontalOptions="Fill"
                  x:Name="FromArea">
            <Label Text="Station name" 
           x:Name="FromAreaText" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Start" 
                        Grid.Column="0"/>
            <Button Text="X" 
                            VerticalOptions="Center" 
                            HorizontalOptions="End" 
                            Grid.Column="1" Clicked="RemoveFrom_Clicked"/>
        </Grid>

        <Entry x:Name="To"
                Placeholder="To"
               TextChanged="To_TextChanged"
               Focused="To_Focused" 
              />
        <Grid ColumnDefinitions="*, Auto" 
          VerticalOptions="Center" 
        IsVisible="False"
          HorizontalOptions="Fill"
        x:Name="ToArea">
            <Label Text="Station name" 

           x:Name="ToAreaText" 
              VerticalOptions="Center" 
              HorizontalOptions="Start" 
              Grid.Column="0"/>
            <Button Text="X" 
                  VerticalOptions="Center" 
                  HorizontalOptions="End" 
                  Grid.Column="1" Clicked="RemoveTo_Clicked"/>
        </Grid>
        <Grid ColumnDefinitions="50, Auto, 50, Auto, 50, Auto" 
      RowDefinitions="Auto" 
      ColumnSpacing="8" 
      HorizontalOptions="Center">

            <Entry Text="{Binding Hour}" 
           HeightRequest="50"
           WidthRequest="{Binding Source={RelativeSource Self}, Path=HeightRequest}"
           Keyboard="Numeric"
           MaxLength="2"
           HorizontalTextAlignment="Center" 
           VerticalTextAlignment="Center" 
           Grid.Column="0"/>

            <Label Text=":" FontSize="Large" VerticalTextAlignment="Center" Grid.Column="1"/>

            <Entry Text="{Binding Minute}" 
           HeightRequest="50"
           WidthRequest="{Binding Source={RelativeSource Self}, Path=HeightRequest}"
           Keyboard="Numeric"
           MaxLength="2"
           HorizontalTextAlignment="Center" 
           VerticalTextAlignment="Center" 
           Grid.Column="2"/>

            <Label Text=":" FontSize="Large" VerticalTextAlignment="Center" Grid.Column="3"/>

            <Entry Text="{Binding Second}" 
           HeightRequest="50"
           WidthRequest="{Binding Source={RelativeSource Self}, Path=HeightRequest}"
           Keyboard="Numeric"
           MaxLength="2"
           HorizontalTextAlignment="Center" 
           VerticalTextAlignment="Center" 
           Grid.Column="4"/>

            <Button Text="Now" 
            Command="{Binding SetTimeToNowCommand}" 
            Grid.Column="5" 
            VerticalOptions="Center"/>
        </Grid>
        <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="6" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
            <Label Text="Search for:" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <RadioButton IsChecked="{Binding IsDeparture}" Content="Departure"/>
            <RadioButton IsChecked="{Binding IsArrival}" Content="Arrival"/>
        </HorizontalStackLayout>

        <Button x:Name="FindRoute" Text="Find route" Clicked="FindRoute_Clicked"/>
        <CollectionView x:Name="Suggestions"
                ItemsSource="{Binding Suggestions}"
                    VerticalOptions="Start">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" Padding="10">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="SuggestionTapped" 
                                              CommandParameter="{Binding .}" />
                        </Label.GestureRecognizers>
                    </Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
